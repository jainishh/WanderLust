<div id="filters" class="shadow-sm p-3 mb-5 bg-white rounded">
  <button class="scroll-btn left" onclick="scrollIcons(-200)">&#8249;</button>
  <div id="icon-filters">
    <div class="filter" onclick="filterCategory('Trending')">
      <div><i class="fa-solid fa-fire"></i></div>
      <p>Trending</p>
    </div>
    <div class="filter" onclick="filterCategory('Rooms')">
      <div><i class="fa-solid fa-bed"></i></div>
      <p>Rooms</p>
    </div>
    <div class="filter" onclick="filterCategory('Iconic_Cities')">
      <div><i class="fa-solid fa-mountain-city"></i></div>
      <p>Iconic Cities</p>
    </div>
    <div class="filter" onclick="filterCategory('Mountains')">
      <div><i class="fa-solid fa-mountain"></i></div>
      <p>Mountains</p>
    </div>
    <div class="filter" onclick="filterCategory('Castles')">
      <div><i class="fa-brands fa-fort-awesome"></i></div>
      <p>Castles</p>
    </div>
    <div class="filter" onclick="filterCategory('Amazing_Pools')">
      <div><i class="fa-solid fa-person-swimming"></i></div>
      <p>Amazing Pools</p>
    </div>
    <div class="filter" onclick="filterCategory('Camping')">
      <div><i class="fa-solid fa-campground"></i></div>
      <p>Camping</p>
    </div>
    <div class="filter" onclick="filterCategory('Farms')">
      <div><i class="fa-solid fa-cow"></i></div>
      <p>Farms</p>
    </div>
    <div class="filter" onclick="filterCategory('Arctic')">
      <div><i class="fa-regular fa-snowflake"></i></div>
      <p>Arctic</p>
    </div>
    <div class="filter" onclick="filterCategory('Doms')">
      <div><i class="fa-solid fa-igloo"></i></div>
      <p>Doms</p>
    </div>
    <div class="filter" onclick="filterCategory('House_Boats')">
      <div><i class="fa-solid fa-ship"></i></div>
      <p>House Boats</p>
    </div>
  </div>

  <button class="scroll-btn right" onclick="scrollIcons(200)">&#8250;</button>

  <div id="scroll-line"></div>

  <div class="tax-toggle">
    <div class="form-check-reverse form-switch">
      <input
        class="form-check-input"
        type="checkbox"
        role="switch"
        id="flexSwitchCheckDefault"
      />

      <label class="form-check-label" for="flexSwitchCheckDefault">
        Display total after taxes
      </label>
    </div>
  </div>
</div>
<div class="row row-cols-lg-3 row-cols-md-2 row-cols-sm-1 mt-3">
  <% for (listing of allListings){ %>
  <a href="/listings/<%= listing._id %>" class="listing-link">
    <div class="card col listing-card">
      <img
        class="card-img-top"
        src="<%= listing.image.url %>"
        alt="listing image "
        style="height: 20rem"
      />

      <div class="card-img-overlay"></div>
      <div class="card-body">
        <p class="card-text">
          <b> <%= listing.title %></b>
          <br />
          &#8377; <%= listing.price.toLocaleString("en-IN") %> / night
          <i class="tax-info">&nbsp; &nbsp; +18% GST</i>
        </p>
      </div>
    </div>
  </a>
  <% } %>
</div>
