  document.addEventListener("DOMContentLoaded", () => {
    const taxSwitch = document.getElementById("flexSwitchCheckDefault");
    const tax_info = document.querySelectorAll(".tax-info");

    if (taxSwitch) {
      taxSwitch.addEventListener("click", () => {
        console.log("clicked");
        for (const tax of tax_info) {
          tax.style.visibility =
            tax.style.visibility === "visible" ? "hidden" : "visible";
        }
      });
    }
  });

  function filterCategory(category) {
    console.log("Clicked category:", category);
    window.location.href = `/listings/?category=${encodeURIComponent(
      category
    )}`;
  }

  document.addEventListener("DOMContentLoaded", () => {
    const container = document.getElementById("icon-filters");
    const scrollLine = document.getElementById("scroll-line");

    if (container) {
      container.addEventListener("scroll", () => {
        const scrollLeft = container.scrollLeft;
        const maxScroll = container.scrollWidth - container.clientWidth;
        const scrollPercent = (scrollLeft / maxScroll) * 100;
        scrollLine.style.width = scrollPercent + "%";
      });
    }
  });

  function scrollIcons(amount) {
    const container = document.getElementById("icon-filters");
    container.scrollBy({ left: amount, behavior: "smooth" });
  }

  document.addEventListener("DOMContentLoaded", () => {
    const container = document.getElementById("icon-filters");
    const scrollLine = document.getElementById("scroll-line");

    if (container) {
      container.addEventListener("scroll", () => {
        const scrollLeft = container.scrollLeft;
        const maxScroll = container.scrollWidth - container.clientWidth;
        const scrollPercent = (scrollLeft / maxScroll) * 100;
        scrollLine.style.width = scrollPercent + "%";
      });
    }
  });
</script>
