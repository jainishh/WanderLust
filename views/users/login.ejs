<% layout("layouts/boilerplate") %>

<div class="row mt-3">
  <h1 class="col-md-6 col-10 offset-md-3 offset-2">Login on Wonderlust</h1>
  <div class="col-md-6 col-8 offset-md-3 offset-2">
    <form action="/login" method="post" novalidate class="needs-validation">
      <div class="mb-3">
        <lable for="username" class="form-label"> Username </lable>
        <input
          type="text"
          name="username"
          id="username"
          class="form-control"
          required
        />
      </div>

      <div class="mb-3">
        <lable for="password" class="form-label"> Password </lable>
        <input
          type="password"
          name="password"
          id="password"
          class="form-control"
          required
        />
      </div>

      <button class="btn btn-success add-btn mt-3 mb-3">Login</button>
    </form>
  </div>
</div>
